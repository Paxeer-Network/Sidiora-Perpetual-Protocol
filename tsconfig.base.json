{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["./artifacts/contracts/*"],
      "@sdk/*": ["./sdk/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "dist",
    "out",
    ".indexer/node_modules",
    ".oracle/node_modules",
    "sdk/node_modules"
  ]
}
